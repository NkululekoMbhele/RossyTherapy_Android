<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15001D"
    tools:context=".AuthActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="140dp"
        android:alpha="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_logosolo"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="275dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13"
        app:srcCompat="@drawable/ic_logo_2"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />



    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="350dp"
        android:layout_height="450dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardMaxElevation="12dp"
        app:cardBackgroundColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" >


        <TextView
            android:id="@+id/requiered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="YOU ARE REQUIRED TO BE A USER\nTO USE THE APP"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#15001D"
            android:textSize="15dp" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_marginTop="120dp"
            android:maxWidth="200px"

            android:layout_gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="310dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:hint="Email"
                android:textColorHighlight="#7B0FA7"
                android:textColorHint="#121212"
                android:textColorLink="#7B0FA7" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_marginTop="200dp"
            app:passwordToggleEnabled="true"

            android:layout_gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:hint="password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#121212"
                android:textColorHighlight="#7B0FA7"
                android:textColorHint="#121212"
                android:textColorLink="#7B0FA7" />



        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/sign_in_btn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="150dp"
            android:background="@drawable/btn_auth_bg"
            android:paddingHorizontal="60dp"
            android:shadowColor="#363636"
            android:text="SIGN IN"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#cccccc"
            android:textSize="20dp"
            app:cornerRadius="50dp"
            app:iconPadding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="Don't have an account"
            android:textColor="#151515"
            android:layout_marginBottom="100dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn_register"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            android:background="@drawable/btn_outline"
            android:paddingVertical="2dp"
            android:paddingHorizontal="60dp"
            android:shadowColor="#eeeeee"
            android:text="Register"
            android:textColor="#530ACA"
            app:backgroundTint="#eeeeee"
            app:cornerRadius="60dp"

            app:rippleColor="#181818"
            app:strokeColor="#530ACA"
            app:strokeWidth="20dp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>